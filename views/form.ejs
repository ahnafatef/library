
<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Library</title>
  <meta name="description" content="Library">
  <script src='/jquery.js'></script>
  <link rel="stylesheet" href="/css/bootstrap.min.css">

</head>

<body>
    <div class='container'>
        <div class="form-group">
          <label for="bookTitle">Title</label>
          <input type="text" class="form-control" id="bookTitle" placeholder="Enter Book Title">
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" class="form-control" id="author" placeholder="Enter Author name">
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          <input type="number" min=0 max=5 class="form-control" id="rating" placeholder="Enter Rating">
        </div>
        <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
      </div>
  <script>
        var book = {title: '', author: '', rating: 0}
        $("#submitBtn").click(function(){
            book.title = $("#bookTitle").val();
            book.author = $("#author").val();
            book.rating = $("#rating").val();
            $.ajax({
            method: "POST",
            url: '/add_book',
            data: book
            }).done(function(response){
            console.log(response);
            }).fail(function(response){
            console.log(response);
            })
        })
  </script>
</body>
</html>
